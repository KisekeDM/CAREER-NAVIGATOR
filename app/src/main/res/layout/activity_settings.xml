<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Settings">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/black"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar" >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SETTINGS"
            android:textSize="26dp"
            android:id="@+id/backbtn"
            android:drawableTint="@color/white"
            android:drawableStart="@drawable/baseline_arrow_back_ios_24"
            android:textColor="@color/white"
            android:textAlignment="center"
            />

    </androidx.appcompat.widget.Toolbar>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/addprofileButton"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="30dp"
        android:layout_width="match_parent"
        android:drawableStart="@drawable/baseline_person_add_24"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:text="CREATE PROFILE"
        android:textSize="45dp"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:background="@drawable/signupbtn"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/viewProfileButton"
        android:layout_width="match_parent"
        android:layout_marginBottom="30dp"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:drawableStart="@drawable/baseline_person_24"
        android:drawableTint="@color/black"
        android:background="@drawable/signupbtn"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:textSize="50dp"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:text="VIEW PROFILE"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/editProfileButton"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="30dp"
        android:layout_weight="1"
        android:drawableStart="@drawable/baseline_edit_24"
        android:background="@drawable/signupbtn"
        android:textSize="50dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:text="EDIT PROFILE"/>

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:drawableStart="@drawable/baseline_logout_24"
        android:layout_marginBottom="30dp"
        android:background="@drawable/signupbtn"
        android:textSize="50dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:text="LOG OUT"
        android:id="@+id/logout"/>

</LinearLayout>